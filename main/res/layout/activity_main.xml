<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Заголовок -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_shield"
                android:layout_marginBottom="16dp"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="leaks"
                android:textSize="32sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Защита от утечек и трекеров"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_vpn"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Блокировщик трекеров"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/vpnToggleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/vpnStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VPN выключен"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Блокирует рекламные и аналитические трекеры в реальном времени через VPN"
                    android:textSize="13sp"
                    android:textColor="@color/text_hint"
                    android:lineSpacingExtra="4dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Статистика блокировки -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/blockedTrackersCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface"
            android:layout_marginBottom="20dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Статистика блокировки"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/blockedTrackersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="36sp"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="заблокировано"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/surface_variant"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/trackersInDbText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10+"
                            android:textSize="36sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="трекеров в базе"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"/>

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/trackerLogButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Смотреть логи трекеров"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_list"
                    app:iconTint="@android:color/white"
                    app:cornerRadius="12dp"
                    android:backgroundTint="@color/primary"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Проверка пароля -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_key"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Проверка пароля"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"/>

                </LinearLayout>

                <!-- Поле ввода пароля -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/primary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:hint="Введите пароль для проверки"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Индикатор сложности -->
                <TextView
                    android:id="@+id/strengthLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сложность пароля: -"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp"/>

                <ProgressBar
                    android:id="@+id/strengthProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progressTint="@color/weak"
                    android:progressBackgroundTint="@color/surface_variant"
                    android:layout_marginBottom="20dp"/>

                <!-- Кнопка проверки -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/checkButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Проверить пароль"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_search"
                    app:iconTint="@android:color/white"
                    app:iconPadding="8dp"
                    app:cornerRadius="16dp"
                    android:backgroundTint="@color/primary"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Результат проверки пароля -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/passwordResultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface"
            android:visibility="gone"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Заголовок результата -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/passwordLoadingIndicator"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"/>

                    <ImageView
                        android:id="@+id/passwordResultIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/passwordResultTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Проверка..."
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"/>

                </LinearLayout>

                <!-- Текст результата -->
                <TextView
                    android:id="@+id/passwordResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ищем пароль в базах утечек..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp"/>

                <!-- Технические детали -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Технические детали:"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/hashText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SHA-1 хеш: -"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="4dp"
                    android:background="@color/surface_variant"
                    android:padding="8dp"
                    android:typeface="monospace"/>

                <TextView
                    android:id="@+id/prefixText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Префикс запроса: -"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="monospace"
                    android:background="@color/surface_variant"
                    android:padding="8dp"
                    android:typeface="monospace"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Нижняя панель -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingsButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Настройки"
                android:textSize="14sp"
                app:icon="@drawable/ic_settings"
                app:iconTint="@color/primary"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/surface"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/aboutButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="О приложении"
                android:textSize="14sp"
                app:icon="@drawable/ic_info"
                app:iconTint="@color/primary"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/surface"/>

        </LinearLayout>

        <!-- Информация -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Приложение использует метод k-анонимности для проверки паролей и VPN для блокировки трекеров"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="16dp"/>

    </LinearLayout>

</ScrollView>